{
  "manifest_version": 3,
  "name": "EDScrapper",
  "version": "2.0",

  "icons": {
    "128": "src/img/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "src/img/icon16.png"
    },
    "default_title": "Click Me"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://ed.team/cursos/*"
      ],
      "run_at": "document_start",
      "js": [
        "src/scripts/content_script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/scripts/injected.js"
      ],
      "matches": [
        "*"
      ]
    },
    {
      "resources": [
        "src/scripts/utileria.js"
      ],
      "matches": [
        "https://ed.team/*"
      ]
    }
  ]
}
